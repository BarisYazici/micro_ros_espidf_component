{
    "name": "Micro-ROS ESP-IDF",
    "image": "microros-esp-idf-latest",
    // "dockerFile": "Dockerfile",
    "forwardPorts": [
        8080
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "mounts": [
        "source=/etc/timezone,target=/etc/timezone,type=bind,consistency=cached,readonly",
        "source=/home/yazi_ba/micro_ros_espidf_component,target=/micro_ros_espidf_component,type=bind,consistency=cached",
        "source=/dev,target=/dev,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--privileged",
        "--net=host"
    ],
    "remoteEnv": {
        "ROS_DOMAIN_ID": "100"
    },
    "workspaceFolder": "/micro_ros_espidf_component",
    "postCreateCommand": "echo 'Devcontainer for Micro-ROS ESP-IDF is ready!'"
}